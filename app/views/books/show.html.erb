<div class="bookshow">
  <div>
    <%= render 'books/list', book: @book %>
  </div>

  <div class="bookshow-main">
    <h2 class="bookshow-topic">Book detail</h2>
    <table>
      <tr>
        <td width="130">
          <%= link_to (attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40'), user_path(@books.user_id) %>
        </td>
        <td width="180"><%= link_to @books.title, book_path(@books.id) %></td>
        <td width="150"><%= @books.body %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@books.id), class: 'btn btn-sm btn-success' %></td>
        <td width="80"></td>
        <td><%= link_to "Destroy", book_path(@books.id), method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "本当に消しますか?" %></td>
        <% end %>
      </tr>
      <tr>
        <td><%= link_to @user.name, user_path(@user.id) %></td>
      </tr>
    </table>
  </div>
</div>