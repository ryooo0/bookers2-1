<div class="bookindex">
  <div>
    <%= render 'books/list', book: @book %>
  </div>
  
  <div class="bookindex-main">
    <h2>Books</h2>
    <table>
      <thead>
        <tr class="bookindex-topic" height="50">
          <th width="70"></th>
          <th width="230">Title</th>
          <th width="0">Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr class="bookindex-row" height="67">
          <td><%= attachment_image_tag @book, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg"%></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>