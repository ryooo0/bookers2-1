<div class="temp-main">
  <h2>User info</h2>
  
  <table>
    <tr height="20"><p>User Image</p></tr>
    <tr class="temp-name" height="50">
      <td width="130"><b>name</b></td>
      <td width="120">●●</td>
    </tr>
    <tr height="50">
      <td><b>introduction</b></td>
      <td>●●</td>
    </tr>
  </table>
  
  <div class="temp-editbutton">
    <%= link_to "(リンク未設定)", books_path, class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  </div>

  <h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
  <!--@book→bookに変更-->
    <p>Title</p>
    <%= f.text_field :title, :size => "30*30" %>
    <p>Opinion</p>
    <%= f.text_area :body, :size => "30*30" %>
    <div>
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    </div>
  <% end %>

</div>

